<!doctype html>

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" type="text/css" href="css/main.css">

</head>

<body>
	<div class="body_container">

		<div class="header_bar">
			<div><a class="header_back_btn" href="/">Logout</div></a>
			<center><a href="/"><img class="header_logo" src="images/Logo.png"></a></center>
		</div>
		
		<div id="body">
			<h2 class="body_header_text">Pending Remindlys</h2>

			<br><br><br>
			
			<!-- Hidden form data to pass: user name and phone number -->
			<input id="user_phone" type="hidden" value={{user_phone}} name="user_phone">
			<input id="user_name_field" type="hidden" value={{user_name}} name="user_name">

			<!-- End of hidden form -->
			<!-- submit button to get clicked/triggered in user_home_JS to make
			get request to get pending remindly data and display on page -->


			<div class="clear_footer"></div>

			<div class="nav_footer">
				<div class="nav_footer_btn_container">
					<a class="nav_footer_link" onclick="renderWhoPage()"><div class="nav_footer_button">Send Remindly&nbsp;&gt;</div></a>
				</div>
			</div>

			<button type="button" id="get_pending_remindlys" onclick="getPendingRemindlys()">

		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>

	<script src="js/main.js"></script>
	<script src="js/user_home_JS.js"></script>


</body>
</html>


