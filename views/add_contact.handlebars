<!-- USER_HOME PAGE -->

<!doctype html>

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" type="text/css" href="css/main.css">

</head>

<body>
	<div class="body_container">

		<div class="header_bar">
			<div><a class="header_back_btn" href="#" onclick="logout()">Logout</a></div>
			<a href="/settings"><div class="add_contacts_btn"><img class="add_contacts_icon_img" src="images/add_contacts_btn.png"></div><div class="settings_button"><img class="settings_icon_img" src="images/settings_icon.png"></div></a>
			<center><a onclick="goToHomeAction()"><img class="header_logo" src="images/Logo_thicker.png"></a></center>
		</div>
		
		<div id="body">
			<h2 class="body_header_text">Add Contact</h2>
			<input id="contact_id_field" type="hidden" value={{contact}}>
			<form id="add_contacts_form" role="form" method="get" action="/when">

				<center>
						<table>

							<tr class='contact_name_row'>
								<td class='add_contact_row'><label class='contact_label' for='contact_name'>Name:</label><input class='contact_textbox' id='contact_name' type='tel' placeholder='Contact Name'></td>
							</tr>
							<tr id='contact_phone_row'>
								<td class='add_contact_row'><label class='contact_label' for='contact_phone'>Number:</label><input class='contact_textbox' id='contact_phone' type='tel' placeholder='Contact Phone Number'></td>
							</tr>

							
						</table>
					</form>
				</center>

			<div class="clear_footer"></div>

			<div class="nav_footer">
				<div class="nav_footer_btn_container">
					<a class="nav_footer_link" onclick="addContact()"><div class="nav_footer_button_option next">Add Contact</div></a>
					<a class="nav_footer_link" href="/contacts"><div class="nav_footer_button_option back">Contacts</div></a>
				</div>
			</div>


		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/jquery.cookie.js"></script>
	<script src="js/main.js"></script>
	<script src="js/add_contact_JS.js"></script>
	<script>
